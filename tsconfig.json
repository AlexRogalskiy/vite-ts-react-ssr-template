{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsxdev",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@client/*": [
        "client/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "types/*",
    "*"
  ]
}
